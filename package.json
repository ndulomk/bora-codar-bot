    "pino-pretty": "^10.2.3",
    "sqlite3": "^5.1.6",
    "sqlite": "^5.1.1"
  },
  "devDependencies": {
    "@types/node": "^20.8.10",
    "@types/node-cron": "^3.0.11",
    "@types/sqlite3": "^3.1.8",
    "@typescript-eslint/eslint-plugin": "^6.10.0",
    "@typescript-eslint/parser": "^6.10.0",
    "eslint": "^8.53.0",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.8",
    "ts-jest": "^29.1.1",
