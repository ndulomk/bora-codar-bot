{
  "name": "post-automation-api",
  "version": "1.0.0",
  "description": "API de automação de posts com agendamento e event-driven architecture",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/server.js",
    "dev": "tsx watch src/server.ts",
